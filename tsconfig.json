{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "flarum/forum/*": ["../../vendor/flarum/core/src/forum/*"],
      "flarum/common/*": ["../../vendor/flarum/core/src/common/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "m",
    "jsxFragmentFactory": "m.fragment",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["js/src/**/*"],
  "exclude": ["node_modules", "js/dist"]
}
