{
    "name": "wszdb/flarum-autolock",
    "description": "Automatically lock discussions after reaching a specified number of posts",
    "keywords": [
        "flarum",
        "extension",
        "auto-lock",
        "moderation"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.8.0",
        "php": "^8.2"
    },
    "authors": [
        {
            "name": "wszdb",
            "email": "zzdogtxt@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Wszdb\\AutoLock\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Auto Lock",
            "category": "feature",
            "icon": {
                "name": "fas fa-lock",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        }
    }
}
